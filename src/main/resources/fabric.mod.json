{
  "schemaVersion": 1,
  "id": "ultimate-hud",
  "version": "${version}",

  "name": "UltimateHUD",
  "description": "A client-side HUD mod, offering customization of both vanilla HUD elements and optional custom HUD elements added by this mod.",
  "authors": [
    "xanderstuff"
  ],
  "contact": {
    "sources": "https://github.com/xanderstuff/UltimateHUD-v2",
    "issues": "https://github.com/xanderstuff/UltimateHUD-v2/issues"
  },

  "license": "LGPL-3.0-only",
  "icon": "assets/ultimatehud/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "io.github.xanderstuff.ultimatehud.UltimateHud"
    ]
  },
  "mixins": [
    "ultimate-hud.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": ">=1.18.2",
    "java": ">=17"
  },
  "suggests": {
  }
}
